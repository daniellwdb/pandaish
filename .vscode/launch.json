  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "env": {
        "npm_package_name": "debug",
        "TS_NODE_TRANSPILE_ONLY": "true",
        "NODE_OPTIONS": "--no-warnings --loader ts-node/esm -r dotenv/config"
      },
      "args": ["${workspaceFolder}/src/index.ts"],
      // https://github.com/pinojs/pino/issues/441
      "outputCapture": "std"
    }
  ]
}
